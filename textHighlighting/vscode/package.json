{
    "name": "language-bcl",
    "description": "BCL Language Support",
    "version": "0.0.1",
    "publisher": "BenjaminAustinJr",
    "engines": {
        "vscode": "0.10.x"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "contributes": {
        "languages": [{
            "id": "bcl",
            "aliases": ["BCL", "bcl","Ben's Compiled Language"],
            "extensions": [".BCL",".bcl"]
        }],
        "grammars": [{
            "language": "bcl",
            "scopeName": "source.bcl",
            "path": "./syntaxes/bcl.tmLanguage"
        }],
        "snippets": [
            {
                "language": "bcl",
                "path": "./snippets/snippets.json"
            }
        ]
    }
}