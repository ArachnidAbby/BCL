{
    "name": "bcl-langauage",
    "version": "1.1.0",
    "publisher": "Benjamin A.",
    "description": "syntax highlighting for BCL",
    "icon": "images/experimental_BCL_LOGO.png",
    "repository": "https://github.com/spidertyler2005/BCL",
    "engines": {
        "vscode":"*"
    },
    "contributes": {
        "languages": [
            {
                "id": "bcl",
                "extensions": [
                    ".bcl"
                ],
                "configuration": "./language-configuration.json",
                "icon":  {
                    "light": "./images/experimental_BCL_LOGO_file.png",
                    "dark": "./images/experimental_BCL_LOGO_file.png"
                } 
            }
        ],
        "grammars": [
            {
                "language": "bcl",
                "scopeName": "source.bcl",
                "path": "./syntaxes/bcl.tmGrammar.json"
            }
        ]
    },
    "devDependencies": {
        "esbuild": "^0.14.29"
    }
}
